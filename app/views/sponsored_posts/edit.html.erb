<h1>Edit Sponsored Post</h1>

 <div class="row">
   <div class="col-md-4">
     <p>Guidelines for sponsored posts</p>
     <ul>
       <li>Legal Stuff</li>
       <li>No Livestock</li>
       <li>Be nice!</li>
     </ul>
   </div>
   <div class="col-md-8">
     <%= form_for [@sponsored_post.topic, @sponsored_post] do |f| %>
       <div class="form-group">
         <%= f.label :title %>
         <%= f.text_field :title, class: 'form-control', placeholder: "Enter sponsored post title" %>
       </div>
       <div class="form-group">
         <%= f.label :body %>
         <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter sponsored post body" %>
       </div>
       <div class="form-group">
         <%= f.label :price %>
         <%= f.text_area :price, rows: 8, class: 'form-control', placeholder: "Enter Price" %>
       </div>
       <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
       </div>
     <% end %>
   </div>
 </div>
