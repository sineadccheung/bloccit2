<h1>New Advertisement</h1>

 <div class="row">
   <div class="col-md-4">
     <p>Guidelines for ads</p>
     <ul>
       <li>Food Related Item Only</li>
       <li>No Livestock</li>
       <li>The incessant use of hashtags will get you banned.</li>
     </ul>
   </div>
   <div class="col-md-8">
     <%= form_for @advertisement do |f| %>
       <div class="form-group">

         <%= f.label :title %>

         <%= f.text_field :title, class: 'form-control', placeholder: "Enter Ad title" %>
       </div>
       <div class="form-group">
         <%= f.label :copy %>
         <%= f.text_area :copy, rows: 8, class: 'form-control', placeholder: "Enter Ad info" %>
       </div>
       <div class="form-group">
         <%= f.label :price %>
         <%= f.text_area :price, rows: 8, class: 'form-control', placeholder: "Enter Ad price" %>
       </div>
       <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
       </div>
     <% end %>
   </div>
 </div>
